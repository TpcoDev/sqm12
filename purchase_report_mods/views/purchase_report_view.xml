        <record id="view_purchase_order_search" model="ir.ui.view">
            <field name="name">report.purchase.order.search</field>
            <field name="model">purchase.report</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_search"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Group By...']/filter[@string='Order Date']" position="after">
                    <separator/>
                    <filter string="Activación" context="{'group_by':'x_studio_activacin'}"/>
                    <filter string="Días de atraso" context="{'group_by':'x_studio_dias_de_atraso'}"/>
                    <filter string="Estado" context="{'group_by':'x_studio_estado'}"/>
                    <filter string="Estado de los días" context="{'group_by':'x_studio_estado_de_los_das'}"/>
                    <filter string="Posición SAP" context="{'group_by':'x_studio_posicion_sap'}"/>
                </xpath>
            </field>
        </record>

